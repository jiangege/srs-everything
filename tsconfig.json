{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/outstandingQueue.test.ts",
    "test/fsrs/difficulty.test.ts",
    "test/fsrs/retrievability.test.ts",
    "test/fsrs/stability.test.ts",
    "test/postpone.test.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
